#!/usr/bin/env sh
. "$(dirname "$0")/_/husky.sh"

echo "🚫 Checking branch name before push..."

# Run branch name validation
node scripts/verify-branch-name.js

if [ $? -ne 0 ]; then
  echo "❌ Branch name validation failed! Please rename your branch according to the pattern."
  exit 1
fi

echo "✅ Branch name validation passed!"